<Modal-Dialog @onClose={{fn this.onClose}} @translucentOverlay={{true}} @containerClassNames="ak-modal">
  {{#if @showHeader}}
    <div local-class="modal-header">
      <h3 local-class="header-title">{{@headerTitle}}</h3>
      <span {{on "click" (fn this.onClose)}} role="button" local-class="close-icon">{{fa-icon "close"}}</span>
    </div>
  {{/if}}
  <div local-class="modal-body">
    {{yield}}
  </div>
</Modal-Dialog>